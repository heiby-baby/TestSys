<Window x:Class="TestSys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestSys"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextAlignment="Center" FontSize="35" Text="Тестовая система"/>
        <Button 
            x:Name="createTest" 
            Content="Создать тест" 
            HorizontalAlignment="Center" 
            Margin="200,0,0,0"
            Grid.Row="1" 
            VerticalAlignment="Center" 
            Height="50" 
            Width="100" 
            Click="createTest_Click"/>
        <Button 
            x:Name="goTest" 
            Content="Пройти тест" 
            Click="goTest_Click"
            HorizontalAlignment="Left" 
            Grid.Row="1" 
            VerticalAlignment="Center" 
            Height="50" 
            Width="100" 
            Margin="50,0,0,0"/>
    </Grid>
</Window>